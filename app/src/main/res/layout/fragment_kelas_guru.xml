<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="kelas guru"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textViewKelasguru"
            />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabAddchat"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add_plus_button"
            app:rippleColor="@color/biru"
            android:backgroundTint="@color/abu"
            app:borderWidth="0dp"
            android:layout_alignEnd="@id/pesan"
            android:layout_alignRight="@id/pesan"
            android:elevation="0dp"
            app:elevation="0dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:id="@+id/pesan"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input"
            android:layout_alignParentBottom="true"
            android:hint="ketik Pesan"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:paddingRight="20dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="95dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            />

</RelativeLayout>