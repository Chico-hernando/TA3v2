<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/profil"
            android:src="@drawable/logo2"
            android:layout_marginTop="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="80dp"
            android:gravity="start"
            android:id="@+id/jeneng"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jeneng"
            android:id="@+id/nama"
            android:layout_marginBottom="-40dp"
            android:text="Nama Siswa/guru"
            android:textSize="23sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/hitam"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginTop="400dp"
            android:gravity="start"
            android:id="@+id/emael"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/emael"
            android:id="@+id/email"
            android:layout_marginBottom="-40dp"
            android:text="Email Siswa/guru"
            android:textSize="23sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/hitam"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="start"
            android:textSize="18sp"
            android:text="School"
            android:layout_marginTop="500dp"
            android:id="@+id/sekola"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sekola"
            android:id="@+id/school"
            android:layout_marginBottom="-40dp"
            android:text="Nama Sekolah Siswa/guru"
            android:textSize="23sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/hitam"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/hitam"
            android:background="@drawable/arrow_kembali"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/kembali"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/hitam"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/edit"
            android:clickable="false"/>

</RelativeLayout>