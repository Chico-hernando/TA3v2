<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/birumd"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_field"
            android:hint="bug"
            android:textColorHint="@color/abu"
            android:layout_marginTop="280dp"
            android:id="@+id/et_bug"
            android:textColor="@color/hitam"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bug Report"
            android:textSize="40sp"
            android:layout_alignTop="@+id/et_bug"
            android:textColor="@color/putih"
            android:layout_marginTop="-125dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            android:layout_centerHorizontal="true"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Send"
            android:textColor="@color/putih"
            android:layout_alignBottom="@+id/et_bug"
            android:layout_alignRight="@+id/et_bug"
            android:layout_marginBottom="-75dp"
            android:id="@+id/sendbug"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tutup"/>

</RelativeLayout>